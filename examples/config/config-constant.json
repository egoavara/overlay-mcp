{
    "application": {
        "log_filter": "info",
        "ip_extract": "ConnectInfo",
        "passthrough": [
            {
                "from": "header:API-KEY"
            }
        ]
    },
    "auth": {
        "authn": {
            "apikey": {
                "key_from": [
                    "header:X-API-KEY",
                    "header:API-KEY",
                    "query:apikey",
                    "query:api-key"
                ]
            },
            "jwt": {
                "type": "oidc-discovery",
                "issuer": "https://dex.egoavara.net",
                "client": {
                    "id": "mcp-db",
                    "secret": "Using ${OVERLAY_MCP_OIDC_CLIENT_SECRET} or write it here",
                    "scopes": [
                        "openid",
                        "email",
                        "profile",
                        "groups"
                    ]
                }
            }
        },
        "constant": {
            "apikey": {
                "whitelist": [
                    "1234567890"
                ]
            },
            "jwt": [
                {
                    "path": "/email",
                    "whitelist": [
                        "egoavara@gmail.com"
                    ]
                }
            ]
        }
    },
    "upstream": {
        "discovery": "http://192.168.220.13/sse"
    },
    "server": {
        "hostname": "http://localhost:9090"
    }
}
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cargo launch",
            "cargo": {
                "args": [
                    "build"
                ]
            },
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "args": [
                "run",
                "-c",
                "examples/config/config.json",
                "--log-filter",
                "info,rmcp::transport::sse=warn,tower_http::trace::on_response=warn",
                "--prometheus"
            ]
        }
    ]
}